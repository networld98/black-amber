{#                                <button type="button" data-toggle="tooltip" class="btn btn-default" title="{{ button_compare }}" onclick="compare.add('{{ product_id }}');"><i class="fa fa-exchange"></i></button>#}
{#                            </div>#}
                        </div>
                        {% if minimum > 1 %}
                            <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_minimum }}</div>
                        {% endif %}</div>
                    </div>
                <div class="hidden-xs hidden-sm {{ class }}">
                    {% if thumb or images %}
                        <ul class="thumbnails">
                            {% if thumb %}
                                <li><a  class="lightview thumbnail big-photo" data-lightview-group="mixed" href="{{ popup }}" title="{{ heading_title }}"><img src="{{ thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" /></a></li>
                            {% endif %}
                            {% if images %}
                                {% for image in images %}

                                    {% if image.video %}
                                        <li class="image-additional"><a class="lightview thumbnail"  data-lightview-type="iframe" data-lightview-options="width: 768, height: 480, viewport: 'scale'" data-lightview-group="mixed" href="https://www.youtube.com/embed/{{ image.video }}" title="{{ heading_title }}"> <img src="{{ image.thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" /><span class="icon-play"></span></a></li>
                                    {% else %}
                                        <li class="image-additional"><a class="lightview thumbnail" data-lightview-group="mixed"  href="{{image.popup}}" title="{{ heading_title }}"> <img src="{{ image.thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" /></a></li>
                                    {% endif %}

                                {% endfor %}
                            {% endif %}
                        </ul>
                    {% endif %}
                </div>
                <div class="{{ class }}">
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab-description">
                            {% if youtube %}
                                <div id="video-schema" itemprop="video" itemscope itemtype="http://schema.org/VideoObject">
                                    <div id="video-schema-meta">
                                        <meta itemprop="uploadDate" content="{{ date_modified }}"/>
                                        <meta itemprop="description" content="{{ description_youtube }}"/>
                                        <link itemprop="url" href="https://youtu.be/{{ youtube }}"/>
                                        <link itemprop="thumbnailUrl" href="https://img.youtube.com/vi/{{ youtube }}/maxresdefault.jpg"/>
                                        <meta itemprop="name" content="{{ heading_title }}"/>
                                        <meta itemprop="embedUrl" content="https://youtu.be/{{ youtube }}"/>
